<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text=" Post " android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/Textbox2" android:textSize="25dp"
        android:background="#3b5998" android:textColor="#ffffff" />



    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/Textbox2">


        <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
         android:layout_height="wrap_content" android:id="@+id/Textbox1" android:textSize="20dp"
         />



    </LinearLayout>

    <ImageView
        android:id="@+id/Image_view"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_below="@+id/linearLayout"
        android:layout_centerInParent="true"
        />




    <Button
        android:id="@+id/CrossButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/linearLayout"
        android:text="X"
        android:textSize="15dp"
        android:background="#dfe3ee"
        android:textColor="#000000"
        android:layout_below="@+id/Textbox2"
        />

</RelativeLayout>
